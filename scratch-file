// a C program to swap two numbers without using third variable
#include<stdio.h>
int main()
{
    int a,b;
    printf("Enter two numbers you want to swap\n ");
    scanf("%d %d",&a,&b);
    printf("Numbers before swaping: %d %d\n",a,b);
    a=a+b;
    b=a-b;
    a=a-b;
    printf("Numbers after swaping :%d %d",a,b);
    return 0;
}

// printing patterns 1
#include<stdio.h>
int main()
{
    int i,j,n;
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=n;j++)
        {
         if(i>=j)
            printf("*");
        }
        printf("\n");
    }

}
OUTPUT: FOR n = 4
*
**
***
****

// printing patterns 2
#include<stdio.h>
int main()
{
    int i,j,n;
    scanf("%d",&n);
    for(i=n;i>0;i--)
    {
        for(j=1;j<=n;j++)
        {
            if(j>=i)
                printf("*");
            else
                printf(" ");
        }
        printf("\n");
    }

}
OUTPUT: FOR n = 4
   *
  **
 ***
****

// a program to find whether a given number is prime or not
//Method : 1 (considering complexity)
#include<stdio.h>
int main()
{
    int n,i,flag=0;
    printf("Enter any positive number");
    scanf("%d",&n);
    for(i=2;i<n;i++){
        if(n%i==0)
        {
            flag=1;
            break;
        }
    }
    if(n==1)
        printf("%d is neither a prime number nor a composite number",n);
    else if(n<0)
    {
       printf("Oops! you entered a negative number!!\n");
       main();
    }

    else if(flag==1)
        printf("%d is not a prime number",n);
    else
        printf("%d is a prime number",n);
    return 0;
}
FIBONACCI SERIES
#include<stdio.h>
int main()
{
    int i,n;
    printf("Enter the number of elements you want in fibonacci series:\n");
    scanf("%d",&n);
    int fib[n];
    fib[0]=0;
    fib[1]=1;

    for(i=2;i<n;i++){
        fib[i]=fib[i-1]+fib[i-2];
    }

    for(i=0;i<n;i++){
        printf("%d ",fib[i]);
    }
    int sum=0;

    for(i=0;i<n;i++){
        sum=sum+fib[i]*fib[i]*fib[i];
    }
    printf("%d",sum);
    return 0;

}
MAGIC NUMBER INITIALS
#include<stdio.h>
int addSquares(int n);
int productSquares(int n);
int main(){
    int sum,pro,num;
    printf("Enter any number:\n");
    scanf("%d",&num);
    sum=addSquares(num);
    pro=productSquares(num);
    printf("sum = %d,product = %d",sum,pro);
    return 0;

}
int addSquares(int n){
int sum=0;
while(n>0){
    sum=sum+(n%10)*(n%10);
    n=n/10;
}
return sum;
}

int productSquares(int n){
int product=1;
while(n>0){
    product=product*(n%10)*(n%10);
    n=n/10;
}
return product;
}




