// a C program to swap two numbers without using third variable
#include<stdio.h>
int main()
{
    int a,b;
    printf("Enter two numbers you want to swap\n ");
    scanf("%d %d",&a,&b);
    printf("Numbers before swaping: %d %d\n",a,b);
    a=a+b;
    b=a-b;
    a=a-b;
    printf("Numbers after swaping :%d %d",a,b);
    return 0;
}

// printing patterns
#include<stdio.h>
int main()
{
    int i,j,n;
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=n;j++)
        {
         if(i>=j)
            printf("*");
        }
        printf("\n");
    }

}
OUTPUT: FOR n = 4
*
**
***
****
